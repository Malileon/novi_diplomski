<%= simple_form_for [topic, quiz, choice_question, choice], html: { class: "form quiz" } do |f| %>
  <%= form_error_notification(choice_question) %>

  <%= f.input :value, input_html: { autofocus: true } %>
  <%= f.check_box :is_correct %>
  <%#= f.input :is_correct, :as => :boolean, :input_html => { :checked => "checked" } %>
  <%= link_to "Cancel", topic_quiz_path(topic, quiz), class: "btn btn--light" %>
  <%= f.submit class: "btn btn--secondary" %>
<% end %>