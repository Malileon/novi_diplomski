<main class="container">
  <div class="auth">
    <h2 class="auth__item">Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), input_html: {data: { turbo: "false"}}) do |f| %>
      <div>
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    placeholder: "Enter your email",
                    input_html: { autocomplete: "email", class: "auth__item" } %>
        <%= f.input :password,
                    required: false,
                    placeholder: "Enter your password",
                    input_html: { autocomplete: "current-password", class: "auth__item" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div>
        <%= f.button :submit,
                    "Log in",
                    id: 'auth-button' %>
      </div>
    <% end %>

    <div class="auth__item">Don't have an account?</div>
    <%= render "devise/shared/links" %>
  </div>
</main>