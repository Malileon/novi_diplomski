<main class="container">
  <div class="auth">
    <h2 class="auth__item">Sign up</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :username,
                    required: true,
                    placeholder: "Enter your username",
                    input_html: { class: "auth__item" } %>
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    placeholder: "Enter your email",
                    input_html: { autocomplete: "email", class: "auth__item" } %>
        <%= f.input :password,
                    required: true,
                    placeholder: "Enter your password",
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", class: "auth__item" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    placeholder: "Enter your password again",
                    input_html: { autocomplete: "new-password", class: "auth__item" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, 
                    "Sign up",
                    id: 'auth-button' %>
      </div>
    <% end %>

    <div class="auth__item">Already have an account?</div>
    <%= render "devise/shared/links" %>
  </div>
</main>