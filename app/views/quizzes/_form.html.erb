<%= simple_form_for [topic, quiz], html: { class: "form" } do |f| %>
  <%= form_error_notification(quiz) %>

  <%= f.input :name, html5: true, input_html: { autofocus: true } %>
  <%= link_to "Cancel", topic_path(@topic), class: "btn btn--light" %>
  <%= f.submit class: "btn btn--secondary" %>
<% end %>