<%= simple_form_for [topic, quiz, text_input_question], html: { class: "form quiz" } do |f| %>
  <%= form_error_notification(text_input_question) %>

  <%= f.input :question_text, html5: true, input_html: { autofocus: true } %>
  <%= f.input :answer, html5: true %>
  <%= link_to "Cancel", topic_quiz_path(topic, quiz), class: "btn btn--light" %>
  <%= f.submit class: "btn btn--secondary" %>
<% end %>