<main class="container">
  <%= link_to sanitize("&larr; Back to quiz"), topic_quiz_path(@topic, @quiz) %>
  
  <div class="header">
    <h1>New choice question</h1>
  </div>

  <%= turbo_frame_tag nested_dom_id(@topic, @quiz, "new_question") do %>
    <div class="quiz__body">
      <%= render "form", topic: @topic, quiz: @quiz, choice_question: @choice_question %>
    </div>
  <% end %>
</main>